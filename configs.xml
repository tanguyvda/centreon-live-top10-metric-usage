<configs>
        <title>Live Top 10 Metric Usage</title>
        <author>Centreon</author>
        <email>contact@centreon.com</email>
        <website>http://www.centreon.com</website>
        <description>Widget for top 10 hosts depending on a specific metric</description>
        <version>18.10.31</version>
        <keywords>centreon, widget, cpu</keywords>
        <screenshot></screenshot>
        <thumbnail>./widgets/centreon-live-top10-metric-usage/resources/logo1.png</thumbnail>
        <url>./widgets/centreon-live-top10-metric-usage/index.php</url>
        <autoRefresh>10</autoRefresh>
	<preferences>
      <preference label="Host Group Name" name="host_group" defaultValue="" type="hostGroupMulti" header="Filters"/>
    	<preference label="Service Description" name="service_description" defaultValue="" type="text"/>
    	<preference label="Metric Name" name="metric_name" defaultValue="" type="text"/>
    	<preference label="Change bar color depending on the service status" name="enable_status_color" defaultValue="0" type="boolean"/>
    	<preference label="Enable animations" name="enable_animations" defaultValue="1" type="boolean"/>
    	<preference label="Animation type" name="animation_type" defaultValue="easeinout" type="list">
    		<option value="easein" label="easein"/>
    		<option value="easeinout" label="easeinout"/>
    		<option value="easeout" label="easeout"/>
    		<option value="linear" label="linear"/>
    	</preference>
    	<preference label="Enable tooltip" name="enable_tooltip" defaultValue="1" type="boolean"/>
      <preference label="Auto Refresh" name="autoRefresh" defaultValue="30" type="text"/>
      <preference label="Number of result (max 15)" name="nb_line" defaultValue="15" type="text"/>
	</preferences>
</configs>
